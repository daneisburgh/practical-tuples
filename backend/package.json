{
    "name": "backend",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "serverless:offline": "cross-env NODE_ENV=local serverless offline",
        "serverless:offline:local": "cross-env NODE_ENV=local serverless offline --host 0.0.0.0",
        "nest": "nest start --watch --preserveWatchOutput",
        "start": "npm run build && npm-run-all --parallel nest serverless:offline",
        "start:local": "npm run build && npm-run-all --parallel nest serverless:offline:local",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:generate": "npm run build && node --require ts-node/register ./node_modules/typeorm/cli.js migration:generate -n Migration",
        "migration:run": "npm run build && ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run"
    },
    "dependencies": {
        "@nestjs/common": "^8.2.3",
        "@nestjs/config": "^1.1.3",
        "@nestjs/core": "^8.2.3",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/platform-express": "8.2.3",
        "@nestjs/typeorm": "^8.0.2",
        "@vendia/serverless-express": "^4.5.2",
        "aws-lambda": "^1.0.7",
        "aws-sdk": "^2.1048.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "crypto-js": "^4.1.1",
        "helmet": "^4.6.0",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.1",
        "serverless": "^2.70.0",
        "typeorm": "^0.2.41"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.1.5",
        "@nestjs/schematics": "^8.0.5",
        "@nestjs/testing": "^8.2.3",
        "@types/aws-lambda": "^8.10.85",
        "@types/aws-sdk": "^2.7.0",
        "@types/crypto-js": "^4.1.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/lodash": "^4.14.177",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.4.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.4.2",
        "npm-run-all": "^4.1.5",
        "serverless-offline": "^8.3.0",
        "serverless-s3-local": "^0.6.20",
        "source-map-support": "^0.5.21",
        "supertest": "^6.1.6",
        "ts-jest": "^27.1.0",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.2"
    }
}
