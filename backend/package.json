{
    "name": "backend",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "serverless:offline": "cross-env NODE_ENV=local serverless offline",
        "serverless:offline:local": "cross-env NODE_ENV=local serverless offline --host 0.0.0.0",
        "nest": "nest start --watch --preserveWatchOutput",
        "start": "npm run migration:run && npm-run-all --parallel nest serverless:offline",
        "start:local": "npm run build && npm-run-all --parallel nest serverless:offline:local",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:generate": "npm run build && node --require ts-node/register ./node_modules/typeorm/cli.js migration:generate -n Migration",
        "migration:run": "npm run build && ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run"
    },
    "dependencies": {
        "@capacitor/device": "^1.1.2",
        "@nestjs/common": "^8.4.4",
        "@nestjs/config": "^1.2.1",
        "@nestjs/core": "^8.4.4",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/platform-express": "8.2.3",
        "@nestjs/typeorm": "^8.0.3",
        "@vendia/serverless-express": "^4.8.0",
        "aws-lambda": "^1.0.7",
        "aws-sdk": "^2.1118.0",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "crypto-js": "^4.1.1",
        "helmet": "^5.0.2",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.8.1",
        "serverless": "^3.15.0",
        "typeorm": "^0.2.45"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.5",
        "@nestjs/schematics": "^8.0.10",
        "@nestjs/testing": "^8.4.4",
        "@types/aws-lambda": "^8.10.94",
        "@types/aws-sdk": "^2.7.0",
        "@types/crypto-js": "^4.1.1",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.4.1",
        "@types/lodash": "^4.14.182",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.25",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "serverless-offline": "^8.7.0",
        "serverless-s3-local": "^0.6.22",
        "source-map-support": "^0.5.21",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.14.1",
        "typescript": "^4.6.3"
    }
}
